<div class="added-todo-container">
  <div class="single-todo-container">

    <ul class="single-container">

      <p>TITLE: </p>
      <li>{{title}}</li>

      <p>DATE: </p>
      <li>{{date}}</li>

      <p>DESCRIPTION: </p>
      <li> {{description}} </li>

      <p>DEADLINE: </p>
      <li> {{deadline}} </li>

      <a href="/todos"><i class="bi bi-arrow-left-circle"></i>
        RETURN</a>

      <h4>{{error}}</h4>
      <form action="/todos/edit/{{_id}}" method="post" class="update-form">
        <input type="text" name="title" placeholder="title" value="{{title}}" />

        <textarea
          name="description"
          class="edit-textarea"
          placeholder="Description"
        >{{description}}</textarea>

        <input type="date" name="deadline" class="date" value="{{deadline}}" />

        <input type="submit" class="add-todo-submit" value="UPDATE" />
      </form>
    </ul>

  </div>
</div>